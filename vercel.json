{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/async-python",  // Use ASGI-compatible builder
      "config": {
        "maxDuration": 30,
        "memory": 1024
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
